generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Organization {
  id            String   @id @default(uuid())
  name          String
  zip_code      String
  address       String
  phone         String
  email         String   @unique
  password_hash String
  created_at    DateTime @default(now())

  pets Pet[]

  @@map("organizations")
}

enum AgeCategory {
  CUB
  ADULT
  ELDERLY
}

enum Size {
  SMALL
  MEDIUM
  BIG
}

enum LevelOfIdependence {
  LOW
  MEDIUM
  HIGH
}

model Pet {
  id                           String             @id @default(uuid())
  name                         String
  about_me                     String
  age_category                 AgeCategory
  energy_level                 Int
  size                         Size
  level_of_idependence         LevelOfIdependence
  recommended_environment_size Size
  images_url                   String[]
  requirements_for_adoption    String[]

  organization    Organization @relation(fields: [organization_id], references: [id])
  organization_id String

  @@map("pets")
}
